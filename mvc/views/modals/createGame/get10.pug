//-
    game settings
    - Your color
        - white, black, random
    - Timer
        - off, time per turn (with reserve), time per game
form#create-game-form
    .input-row 
        .input-label 
            .input-label-content You go
        .input-container 
            input#go-first(type="radio" value="first" name="go")
            label(for="go-first") First 
            input#go-second(type="radio" value="second" name="go")
            label(for="go-second") Second 
            input#go-random(type="radio" value="random" name="go")
            label(for="go-random") Random
    .input-row 
        .input-label 
            .input-label-content Timer
        .input-container 
            input#timer-game(type="radio" value="game" name="timer")
            label(for="timer-game") Game 
            input#timer-move(type="radio" value="move" name="timer")
            label(for="timer-move") Move 
            input#timer-off(type="radio" value="off" name="timer")
            label(for="timer-off") Off
    #timer-settings-area.d-flex.flex-column 
        .input-row 
            .input-label
                .input-label-content Time per #[span#timer-setting game] (min)
            .input-container 
                input#time(type="number" min="5")
        .input-row 
            .input-label 
                a(data-bs-toggle="tooltip")
                    img.help(src="/img/help.svg")
                #adjustment-type.input-label-content Incrememt (sec)
            .f-1.d-flex.flex-column
                input#adjustment(type="number" min="0")
        
            