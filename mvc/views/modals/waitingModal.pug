.modal.fade#waiting-modal(tabindex="-1" aria-labelledby="waiting-label" aria-hidden="true" data-bs-backdrop="static")
    .modal-dialog.modal-dialog-centered
        .modal-content#waiting-modal-content
            .modal-body
                .w-100.d-flex.flex-column
                    h5.m-auto.mb-3 Waiting for match 
                    .m-auto.spinner-border(role="status")
                        span.visually-hidden Loading...
            .modal-footer
                .w-100.d-flex
                    button#cancel-game.m-auto.btn.btn-secondary(type="button" data-bs-dismiss="modal") Cancel
